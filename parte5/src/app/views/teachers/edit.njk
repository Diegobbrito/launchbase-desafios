{% extends "layout.njk" %}

{% block content %}
<div class="card">

    <section 
      class="avatar"
      style="background: url({{teacher.avatar_url}})" 
    >

    </section>
    <section class="details">
        <form method="POST" action="/teachers?_method=PUT">
            <h2>Editar professor</h2>
            {% include 'teachers/fields.njk'%}
        <input type="hidden" name="id" value={{teacher.id}}>
        </form>
        <form id="form-delete" method="POST" action="/teachers?_method=DELETE">     
            <button type="submit" class="button-delete">Deletar</button>        
        <input type="hidden" name="id" value={{teacher.id}}>
        </form>
    </section>

</div>
{% include 'confirm.njk'%}

{% endblock content %}