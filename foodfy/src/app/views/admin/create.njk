{% extends "layout.njk" %}
{% block content %}

<div class="card">
    <form action="/admin/recipes" method="post">
        <h1>Criando receita</h1>
        <h2>Imagem da receita:</h2>
        <input type="url" placeholder="Imagem" name="image">
        <h2>Titulo</h2>
        <input type="text" placeholder="Titulo" name="title">
        <h2>Chef</h2>
        <input type="text" placeholder="Autor" name="chef_id">
        <h2>Ingredientes</h2>
        <div id="ingredients">
        <div class="ingredient">
            <input type="text" name="ingredients[]" value="" placeholder="Ingredient" />
        </div>
        </div>
        <button type="button" class="add-ingredient">Add Ingredient</button>
        <h2>Modo de preparo</h2>
        <textarea name="preparation[]" id="" cols="30" rows="10"></textarea>
        <h2>Informações adicionais</h2>
        <textarea name="information" id="" cols="30" rows="10"></textarea>
    </form>
</div>
{% endblock content %}