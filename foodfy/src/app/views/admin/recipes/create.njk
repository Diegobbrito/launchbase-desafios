{% extends "layout.njk" %}
{% block content %}

<div class="card">
    <form action="/admin/recipes" method="post" enctype="multipart/form-data">

        <div class="header-recipe-create">
            <h1>Criando receita</h1>
            <button type="submit">Salvar receita</button>
        </div>
        <h2>Imagem da receita:</h2>

         <div id="photos-upload">
            <input 
                id="photos-input"
                type="file" 
                name="photo"
                multiple
                accept="image/*"
        >
            <span class="material-icons">
                add
            </span>
        </div>
        <h2>Titulo</h2>
        <input type="text" placeholder="Titulo" name="title">
        <h2>Chef</h2>
        <select name="chef_id" id="">
            {% for chef in chefOptions %}
                <option value="{{chef.id}}">{{chef.name}}</option>
            {% endfor %}
        </select>
        <h2>Ingredientes</h2>
        <div id="ingredients">
        <div class="ingredient">
            <input type="text" name="ingredients[]" value="" placeholder="Ingredient" />
        </div>
        </div>
        <button type="button" class="add-ingredient">Add Ingredient</button>
        <h2>Modo de preparo</h2>
        <textarea name="preparation[]" id="" cols="115" rows="10"></textarea>
        <h2>Informações adicionais</h2>
        <textarea name="information" id="" cols="115" rows="10"></textarea>
    </form>
</div>

{% endblock content %}
