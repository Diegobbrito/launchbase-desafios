{% extends "layout.njk" %}

{% block content %}

<div class="card">
        <h1>Gerenciar chefs</h1>

    <div class="card-list">

        {% for chef in chefs %}
        <div class="chef-list">
            <img src="/images/{{chef.image}}" >
            <div class="text-list">
            <span>{{chef.name}}</span>
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </div>

        </div>
        {% endfor %}
    </div>
</div>
{% endblock content %}
