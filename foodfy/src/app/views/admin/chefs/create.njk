{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <form action="/admin/chefs" method="post">
        <div class="header-chef-create">
            <h1>Criando chef</h1>
            <button type="submit">Salvar chef</button>
        </div>
        <h2>Nome</h2>
        <input type="text" placeholder="Nome" name="name">
        <h2>Avatar</h2>
        <input type="url" placeholder="Imagem" name="avatar_url">
    </form>
</div>
<script src="/public/script.js"></script>
{% endblock content %}