{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <form action="/admin/chefs" method="post" enctype="multipart/form-data">
        <div class="header-chef-create">
            <h1>Criando chef</h1>
            <button type="submit">Salvar chef</button>
        </div>
        <h2>Nome</h2>
        <input type="text" placeholder="Nome" name="name">
        <h2>Avatar</h2>
        <div>
            <div id="photos-upload">
                <input 
                 id="photos-input"
                 type="file" 
                 name="photos"
                 accept="image/*"
                 onchange="PhotoUpload.handleFileInput(event,1)"
                >
                <p>Enviar avatar</p>
            </div>
            <div id="photos-preview">

            </div>
        </div>
    </form>
</div>
{% endblock content %}