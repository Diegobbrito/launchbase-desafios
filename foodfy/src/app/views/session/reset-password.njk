{% extends "layout.njk" %}
{% block content %}

<section class="card login container form">
    <form action="/users/password-reset" method="post">
    <div class="header">
        <h1>Nova senha</h1>
    </div>
    <div class="fields">
        <h3>Email</h3>
        <input 
         type="email" 
         name="email" 
         placeholder="Digite seu email" 
         value="{{user.email}}"
         onblur="Validate.apply(this, 'isEmail')"
         required>
        <h3>Senha</h3>
        <input type="password" name="password" placeholder="Digite sua nova senha" required>
        <h3>Repitir senha</h3>
        <input type="password" name="passwordRepeat" placeholder="Repita a nova senha" required>
        <input type="hidden" name="token" value="{{token}}">
    </div>

    <div class="footer">
         <button class="button" type="submit">Nova senha</button>
    </div>
    </form>
</section>


{% endblock content %}