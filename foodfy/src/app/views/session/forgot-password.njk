{% extends "layout.njk" %}
{% block content %}

<section class="card login container form">
    <form action="/users/forgot-password" method="post">
    <div class="header">
        <h1>Esqueceu a senha?</h1>
    </div>
    <div class="fields">
        <h3>Email</h3>
            <input 
            type="email" 
            name="email" 
            placeholder="Digite seu email para recuperar sua senha" 
            onblur="Validate.apply(this, 'isEmail')"
            required
            >
    </div>

    <div class="footer">
            <button class="button" type="submit">Recuperar</button>
    </div>
    </form>
</section>


{% endblock content %}