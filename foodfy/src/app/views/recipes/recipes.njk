{% extends "layout.njk" %}
{% block content %}

<div class="mais-acessadas">
    <div class="receitas">
        {% for recipe in recipes %}
            <div class="receita" id="{{recipe.id}}">
                <img src={{recipe.src}} >
                <h2>{{recipe.title}}</h2>
                <h3>por {{recipe.chef_name}}</h3>
            </div>
        {% endfor %}
        
    </div>
</div>

{% endblock content %}