{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <a href="/students/create">Novo</a>
    <table>
        <thead>
            <tr>
                <th>Nome completo</th>
                <th>Email</th>
                <th>Ano Escolar</th>
                <th>Ação</th>   
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td><img src="{{student.avatar_url}}">{{ student.name }}</td>
                <td>{{student.email}}</td>
                <td>{{student.escolaridade}}</td>
                <td>
                    <a href="students/{{student.id}}">
                        Mais informações
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    
</div>
{% endblock content %}